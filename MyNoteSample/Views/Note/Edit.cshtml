@{
    ViewData["Title"] = "Yazı Güncelle";
}

<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-4">
    <div class="col-4">
        <form>
            <div class="form-group">
                <label for="category" class="font-weight-bold">Kategori</label>
                <select id="category" class="form-control">
                    <option selected>Seçiniz</option>
                    <option value="1">Kategori 1</option>
                    <option value="2">Kategori 2</option>
                    <option value="3">Kategori 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="title" class="font-weight-bold">Başlık</label>
                <input type="text" class="form-control" id="title">
            </div>
            <div class="form-group">
                <label for="summary" class="font-weight-bold">Özet</label>
                <textarea rows="2" class="form-control" id="summary">@(TextData.GetSentences(2))</textarea>
            </div>
            <div class="form-group">
                <label for="detail" class="font-weight-bold">Detay</label>
                <textarea rows="6" class="form-control" id="detail">@(TextData.GetSentences(6))</textarea>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="isdraft">
                <label for="isdraft" class="form-check-label">Taslak</label>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-save mr-2"></i>Kaydet</button>
            <a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Listeye Dön</a>
        </form>
    </div>
</div>