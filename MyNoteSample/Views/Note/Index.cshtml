@{
    ViewData["Title"] = "Yazılarım";
}


<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a class="btn-primary btn-sm btn" asp-action="Create"><i class="fa fa-plus mr-2"></i>Yazı Ekle</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col table-responsive">
        <table class="table table-hover table-striped table-sm small">
            <thead>
                <tr>
                    <th>Kategori</th>
                    <th>Başlık</th>
                    <th class="text-center">Taslak</th>
                    <th>Beğeni Adet</th>
                    <th>Yorum Adet</th>
                    <th>Oluşturan</th>
                    <th>Oluşturma Tarihi</th>
                    <th>Güncelleyen</th>
                    <th>Güncelleme Tarihi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < 10; i++)
                {
                    <tr>
                        <td>@NameData.GetCompanyName()</td>
                        <td>@TextData.GetSentence()</td>
                        <td class="text-center">
                            <i class="fa fa-@(BooleanData.GetBoolean() ? "check text-success": "times text-danger")"></i>
                        </td>
                        <td class="text-center">@NumberData.GetNumber(1, 100)</td>
                        <td class="text-center">@NumberData.GetNumber(1, 100)</td>
                        <td>@NameData.GetFullName()</td>
                        <td>@DateTimeData.GetDatetime()</td>
                        <td>@NameData.GetFullName()</td>
                        <td>@DateTimeData.GetDatetime()</td>
                        <td>
                            <button class="btn btn-sm btn-success" data-toggle="modal" data-target="#modal_notecomments"><i class="fa fa-comments"></i></button>
                            <a class="btn btn-warning btn-sm" asp-action="Edit"><i class="fa fa-edit"></i></a>
                            <a class="btn btn-info btn-sm" asp-action="Details"><i class="fa fa-search"></i></a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="modal_notecomments" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yorumlar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            @for (var i = 0; i < 10; i++)
           {
            <div class="modal-body">
                <div class="media">
                    <img src="https://picsum.photos/id/1005/64" class="mr-3" alt="...">
                    <div class="media-body">
                        <h5 class="mt-0">umitbalikci</h5>
                        <p>Will you do the same for me? It's time to face the music I'm no longer your muse. Heard it's beautiful, be the judge and my girls gonna take a vote. I can feel a phoenix inside of me. Heaven is jealous of our love, angels are crying from up above. Yeah, you take me to utopia.</p>
                        <p class="small text-right text-muted"><i class="fa fa-clock mr-2"></i>21.05.2022 16:41</p>
                    </div>
                </div>
                <div class="media mt-4">
                    <div class="media-body">
                        <form method="post">
                            <div class="input-group">
                                <textarea rows="2" class="form-control" placeholder="yorumunuz.."></textarea>
                                <div class="input-group-append">
                                    <button class="btn btn-sm btn-primary"><i class="fa fa-send"></i>Gönder</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>   
           }
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal"><i class="fa fa-times mr-2"></i>Kapat</button>
            </div>
        </div>
    </div>
</div>