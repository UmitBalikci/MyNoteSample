@model IEnumerable<User>

@{
    ViewData["Title"] = "Kullanıcılar";
}


<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a class="btn-primary btn-sm btn" asp-action="Create"><i class="fa fa-plus mr-2"></i>Kullanıcı Ekle</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col table-responsive">
        <table class="table table-hover table-sm small">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.Username)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    <th class="text-center">@Html.DisplayNameFor(m => m.IsActive)</th>
                    <th class="text-center">@Html.DisplayNameFor(m => m.IsAdmin)</th>
                    <th>@Html.DisplayNameFor(m => m.CreatedUser)</th>
                    <th>@Html.DisplayNameFor(m => m.CreatedUser)</th>
                    <th>@Html.DisplayNameFor(m => m.ModifiedUser)</th>
                    <th>@Html.DisplayNameFor(m => m.ModifiedAt)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (User user in Model)
                {
                    <tr class="@(user.IsActive ? "":"bg-light")">
                       <td>@user.FullName</td>
                       <td>@user.Username</td>
                       <td>@user.Email</td>
                       <td class="text-center">
                           <i class="fa fa-@(user.IsActive ? "check text-success": "times text-danger")"></i>
                       </td>
                       <td class="text-center">
                           <i class="fa fa-@(user.IsAdmin ? "check text-success": "times text-danger")"></i>
                       </td>

                       <td>@user.CreatedUser</td>
                       <td>@user.CreatedAt</td>
                       <td>@user.ModifiedUser</td>
                       <td>@user.ModifiedAt</td>
                       <td>
                           <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@user.Id"><i class="fa fa-edit"></i></a>
                           <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@user.Id"><i class="fa fa-search"></i></a>
                           <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@user.Id"><i class="fa fa-trash"></i></a>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>