@{
    ViewData["Title"] = "Kullanıcılar";
}


<div class="row mb-4">
    <div class="col">
        <h3 class="display-4 border-bottom">@ViewData["Title"]</h3>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a class="btn-primary btn-sm btn" asp-action="Create"><i class="fa fa-plus mr-2"></i>Kullanıcı Ekle</a>
    </div>
</div>

<div class="row mb-4">
    <div class="col table-responsive">
        <table class="table table-hover table-sm small">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>E-Posta</th>
                    <th class="text-center">Aktif</th>
                    <th class="text-center">Yönetici</th>
                    <th>Oluşturan</th>
                    <th>Oluşturma Tarihi</th>
                    <th>Güncelleyen</th>
                    <th>Güncelleme Tarihi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < 10; i++)
                {
                    bool isActive = @BooleanData.GetBoolean();
                    <tr class="@(isActive ? "":"bg-light")">
                       <td>@NameData.GetFullName()</td>
                       <td>@NameData.GetTitleName()</td>
                       <td>@NetworkData.GetEmail()</td>
                       <td class="text-center">
                           <i class="fa fa-@(isActive ? "check text-success": "times text-danger")"></i>
                       </td>
                       <td class="text-center">
                           <i class="fa fa-@(BooleanData.GetBoolean() ? "check text-success": "times text-danger")"></i>
                       </td>

                       <td>@NameData.GetFullName()</td>
                       <td>@DateTimeData.GetDatetime()</td>
                       <td>@NameData.GetFullName()</td>
                       <td>@DateTimeData.GetDatetime()</td>
                       <td>
                           <a class="btn btn-warning btn-sm" asp-action="Edit"><i class="fa fa-edit"></i></a>
                           <a class="btn btn-info btn-sm" asp-action="Details"><i class="fa fa-search"></i></a>
                           <a class="btn btn-danger btn-sm" asp-action="Delete"><i class="fa fa-trash"></i></a>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </div>
</div>